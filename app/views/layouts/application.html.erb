<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width">	

	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	
	<script src="/assets/html5.js"></script>

	<title><%= yield(:title) %>Aventura plein air </title>
	<% if @footer_content.background_image and session[:season] == :winter %>
		<style>
			body {
				background: url("<%= @footer_content.background_image %>") #333 no-repeat top center;
				background-attachment: fixed
			}
		</style>
	<% else %>
		<style>
			body {
				background: url("<%= @footer_content.background_summer_image %>") #333 no-repeat top center;
				background-attachment: fixed
			}
		</style>
	<% end %>
	
	<%= csrf_meta_tags %>
	<script>
	    var _gaq=[['_setAccount','UA-44635891-1'],['_trackPageview']];
	    (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
	    g.src='//www.google-analytics.com/ga.js';
	    s.parentNode.insertBefore(g,s)}(document,'script'));
	</script>
</head>
<body class="section<%= '-' + params[:controller] %>">
	<%= render :partial => 'includes/header' %>
	<%= yield %>
	<%= render :partial => 'includes/footer' %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<% if params[:controller] == 'activity' && params[:action] == 'show' %>
		<%= javascript_tag do %>
		console.log('test')
			$(document).ready(function() {
			  $('.show-more').on('click', function () {
			    $('.comments-list').html("<%= render "comments/comment", :comments => @activity.comments.where("approved = true") %>");
			    $('.show-more').hide();
			  })
			});
		<% end %>
	<% end %>
	<% if params[:controller] == 'location' && params[:action] == 'show' %>
		<%= javascript_tag do %>
		console.log('test')
			$(document).ready(function() {
			  $('.show-more').on('click', function () {
			    $('.comments-list').html("<%= render "comments/comment", :comments => @location.comments.where("approved = true") %>");
			    $('.show-more').hide();
			  })
			});
		<% end %>
	<% end %>
	<% if params[:controller] == 'event' && params[:action] == 'show' %>
		<%= javascript_tag do %>
		console.log('test')
			$(document).ready(function() {
			  $('.show-more').on('click', function () {
			    $('.comments-list').html("<%= render "comments/comment", :comments => @event.comments.where("approved = true") %>");
			    $('.show-more').hide();
			  })
			});
		<% end %>
	<% end %>
</body>
</html>
