<header class="header">
	<nav class="options-nav">
		<ul>
			<li class="season" ><%= link_to	t(:"include.winter"), 'winter_url' %></li>
			<li class="language" ><%= link_to "English", set_language_english_path unless I18n.locale == :en %><%= link_to "FranÃ§ais", set_language_french_path unless I18n.locale == :fr %></li>
		</ul>
	</nav>
	<ul class="social-nav">
		<li><%= link_to image_tag('facebook-icon.png', :alt => 'Facebook page'), 'http://facebook.com', :target => '_blank' %></li>
		<li><%= link_to image_tag('googleplus-icon.png', :alt => 'Google + page'), 'http://plus.google.com', :target => '_blank' %></li>
		<li><%= link_to image_tag('twitter-icon.png', :alt => 'Twitter page'), 'http://twitter.com', :target => '_blank' %></li>
	</ul>
	<%= link_to image_tag('logo-aventura.png', :alt => 'Aventura plein air', :class => 'logo', :width => 260, :height => 211), root_url %>
	<div class="right-side">
		<%= form_tag({controller: "search", action: "index", method: "get"}, {:class => 'ok-form'}) do %>
			<input type="text" name="search" placeholder="<%= t(:"include.search") %>..." />
			<button type="submit">Ok</button>
		<% end %>
		<nav class="main-nav">
			<h1><%= t(:"include.main_nav") %></h1>
			<ul>
				<li><span><%= t(:"include.activities") %></span>
					<% if @menu_activity_category %>
						<ul class="sub-menu activity">
							<% @menu_activity_category.each do |activity_category| %>
								<li><span><%= activity_category.name %></span>
									<% if activity_category.activity %>
										<ul>
											<% activity_category.activity.where('online = true').each do |activity| %>
												<li><%= link_to activity.name , activity_url(activity.id) %>
											<% end %>
										</ul>
									<% end %>
								
							<% end %>
						</ul>
					<% end %>
				</li>
				<li><span><%= t(:locations) %></span>
					<% if @menu_location %>
						<ul class="sub-menu">
							<% @menu_location.each do |location| %>
								<li><%= link_to location.name, location_url(location.id) %>
							<% end %>
						</ul>
					<% end %>
				</li>
				<li><%= link_to t(:events) , event_index_url %>
					<% if @menu_event %>
					<ul class="sub-menu">
						<% @menu_event.each do |event| %>
							<li><%= link_to event.name, event_url(event.id) %>
						<% end %>
					</ul>
					<% end %>
				</li>
				<li><span><%= 'Top 10' %></span>
					<ul class="sub-menu top-ten">
						<li><%= link_to t(:"locations"), top_location_index_url %>
						<li><%= link_to t(:"include.activities"), top_activity_index_url %>
						<li><%= link_to t(:events), top_event_index_url %>
					</ul>
				</li>
				<li><%= link_to 'Mathieu Dupuis', 'http://mathieudupuis.com', :target => '_blank' %></li>
				<li><%= link_to t(:about), about_page_index_url %></li>
			</ul>
		</nav>
	</div>
</header>
<main class="content">