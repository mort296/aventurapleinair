<% title t(:"equipment.title") + " - " %>
<h1 class="stand-alone" ><%= t(:"equipment.title") %></h1>

<section class="section event-list">
	<ul>
		<% @equipments.each do |equipment| %>
			<li>
				<div class="left">
					<h2><%= link_to equipment.name, equipment_url(equipment.id) %></h2>
					<p><%= raw equipment.description %></p>
				</div>
				<div class="right">
					<%= link_to image_tag(equipment.image.url(:thumb_admin)), equipment_url(equipment.id) %>
				</div>
			</li>
		<% end %>	
	</ul>
</section>