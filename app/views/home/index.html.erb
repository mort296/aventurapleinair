		<li><%= link_to image_tag('gp-icon.png', :alt => 'Google + page'), 'http://plus.google.com', :target => '_blank' %></li>
		<li><%= link_to image_tag('twitter-icon.png', :alt => 'Twitter page'), 'http://twitter.com', :target => '_blank' %></li>
		<li><%= link_to	'Hiver', 'winter_url' %></li>
		<li><%= link_to	'English', 'english_url' %></li>
	</ul>
	<%= link_to image_tag('logo-aventura.png', :alt => 'Aventura plein air'), root_url %>
