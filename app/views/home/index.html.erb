<% title 'Accueil' %>

<section class="event-slider" style="clear:both;">
	<div id="slider" class="flexslider">
	  <ul class="slides">
			<% @menu_event.each do |event| %>
				<li>
					<%= link_to image_tag(event.image.url()), event_url(event.id) %>
					<p class="flex-caption"><span class="title"><%= event.name %></span><span class="date"><%= event.date_start %> Ã  <%= event.date_end %></span><span class="location"><%= event.location.name %></span></p>
				</li>	
			<% end %>
		</ul>
	</div>
	<div id="carousel" class="flexslider">
	  <ul class="slides">
	    <% @menu_event.limit(5).each do |event| %>
				<li>
					<%= image_tag event.image.url(:top_ten_small) %>
				</li>	
			<% end %>
	  </ul>
	</div>
</section>

<h1 class="home-title"><%= @home.title if @home.title %></h1>

<section class="about-us">
	<h1>Qui sommes nous?</h1>
	<ul>
		<li><h2><%= @home.who_one_title if @home.who_one_title %></h2></li>
		<li><%= @home.who_one_text.html_safe if @home.who_one_text %></li>
	</ul>
	<object width="425" height="250"><param name="allowfullscreen" value="true" /><param name="allowscriptaccess" value="always" /><param name="movie" value="http://vimeo.com/moogaloop.swf?clip_id=<%= @video_id %>&amp;force_embed=1&amp;server=vimeo.com&amp;show_title=1&amp;show_byline=1&amp;show_portrait=1&amp;color=00adef&amp;fullscreen=1&amp;autoplay=0&amp;loop=0" /><embed src="http://vimeo.com/moogaloop.swf?clip_id=<%= @video_id %>&amp;force_embed=1&amp;server=vimeo.com&amp;show_title=1&amp;show_byline=1&amp;show_portrait=1&amp;color=00adef&amp;fullscreen=1&amp;autoplay=0&amp;loop=0" type="application/x-shockwave-flash" allowfullscreen="true" allowscriptaccess="always" width="425" height="250"></embed></object>
	<ul>
		<li><h2><%= @home.who_two_title if @home.who_two_title %></h2></li>
		<li><%= @home.who_two_text.html_safe if @home.who_two_text %></li>
	</ul>
</section>

<section class="featured">
	<h1>En vedette</h1>
	<div class="slider">
		<%= image_tag @home.featured_image.url(:thumb_featured) if @home.featured_image %>
		<div class="caption">
			<p><%= @home.featured_caption_place if @home.featured_caption_place %></p>
			<strong><%= @home.featured_caption_activity if @home.featured_caption_activity %></strong>
		</dib>
	</div>
</section>
<aside class="sidebar-pub">
	<h1>Promotions</h1>
	<p><%= @home.promotion_text if @home.promotion_text %></p>
	<%= image_tag @home.pub1.image.url(:sidebar_pub) if @home.pub1 %>
</aside>
<aside class="bottom-pub">
	<%= image_tag @home.pub2.image.url(:bottom_pub) if @home.pub2 %>
</aside>