<% title t(:"search.title") + " - " %>
<h1 class="stand-alone"><%= t(:"search.title") %></h1>
<h2><%= t(:"search.activity") %></h2>
<ul>
<% if @activity.length > 0 %>
	<% @activity.each do |activity| %>
		<li><%= link_to activity.name , activity_url(activity.id) %>
	<% end %>
<% else %>
	<li><%= t(:no_results) %></li>
<% end %>
</ul>
