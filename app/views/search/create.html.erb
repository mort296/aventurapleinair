<ul>
<% if @location.length > 0 %>
	<% @location.each do |location| %>
		<li><%= link_to location.name , location_url(location.id) %>
	<% end %>
<% else %>
	<li><%= t(:no_results) %></li>
<% end %>
</ul>
<h2><%= t(:"search.event") %></h2>
<ul>
<% if @event.length > 0 %>
	<% @event.each do |event| %>
		<li><%= link_to event.name , event_url(event.id) %>
	<% end %>
<% else %>
	<li><%= t(:no_results) %></li>
<% end %>
</ul>