<ul class="rating <%= 'hover' if not cookies[@item.id] %> <%= if @item.location_rating then @item.getCurrentRate(@item.location_rating.rate.to_i) else 'nostar' end %>">
  <% (1..5).each do |i| %>
    <li class="<%= rating_class(i) %>"><button title="<%= i %> star" type="button" name="rating-<%= rating_class(i) %>" data-location-id="<%= @item.id %>" data-rating="<%= i %>" ></button></li>
  <% end %>
</ul>