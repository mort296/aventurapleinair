<% title @activity.name %>
<h1><%= @activity.name %></h1>
<p><%= @activity.description.html_safe %></p>
<table>
	<tr>
		<td>Saison:</td>
		<td><%= @activity.season.name %></td>
	</tr>
	<tr>
		<td>Fédération:</td>
		<td><%= @activity.federation %></td>
	</tr>
	<tr>
		<td>Site web</td>
		<td><%= @activity.website %></td>
	</tr>
</table>
<h2>Particularité de l'activité</h2>
<p><%= @activity.particularity.html_safe if @activity.particularity %></p>
<div class="slider">
	<%= image_tag @activity.image if @activity.image  %>
	<caption>
		Promenade en Canot
		Parc national de la Jacques Cartier
	</caption>
</div>
<section class="location">
	<h1>Lieux</h1>
	<ul>
		<% if @activity.locations %>
			<% @activity.locations.each do |location| %>
				<li><%= link_to location.name, location_url(location.id) %></li>
			<% 	end %>
		<% 	end %>
	</ul>
</section>
<section class="event">
	<h1>Événements</h1>
	<ul>
		<% if @activity.events %>
			<% @activity.events.each do |event| %>
				<li><%= link_to event.name, event_url(event.id) %></li>
			<% 	end %>
		<% 	end %>
	</ul>
</section>
<section class="learn">
	<h1>Apprendre</h1>
	<p><%= if @activity.learn? then @activity.learn.html_safe else 'Aucun apprentissage spécifié' end %></p>
</section>
<section class="equipements">
	<h1>Équipements</h1>
	<p><%= if @activity.equipment? then @activity.equipment.html_safe else 'Aucun équipement de spécifié' end %></p>
</section>